---
import NavButton from './NavButton.astro'
import AboutIcon from './icons/AboutIcon.astro'
import HourGlass from './icons/HourGlass.astro'
import RocketIcon from './icons/RocketIcon.astro'
import BrandGithub from './icons/BrandGithub.astro'
---

<header class="py-4 px-4 min-w-screen grid place-content-center">

    <div class="mb-4 tracking-tight font-extrabold text-white flex flex-col items-center">
        <h2 class="mb-3 text-5xl">
            Rocket Launches ðŸš€
        </h2>
        <p class="text-gray-500 text-base sm:text-xl dark:text-gray-400 max-w-xl font-light">
            All the information about upcoming rocket launches from SpaceX
        </p>
    </div>

    <nav class="flex flex-row items-center justify-between w-full text-center md:flex-row max-w-xl">
        <NavButton href="/">
            Latest
            <RocketIcon slot="before" />
        </NavButton>
        <NavButton href="/about">
            About
            <AboutIcon slot="before" />
        </NavButton>
        <NavButton href="/launches-by-year/2010">
            Oldest
            <HourGlass slot="before" />
        </NavButton>
        <NavButton href="https://github.com/jamerrq/rocket-launches" target="_blank">
            Source
            <BrandGithub slot="before" />
        </NavButton>
    </nav>

</header>
