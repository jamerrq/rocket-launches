---
import { type Doc } from '../types/apiTypes'
import CardLaunch from '../components/CardLaunch.astro'
interface Props {
  launches: Doc[] | undefined
}
const launches = Astro.props.launches
---

<div class="grid gap-8 grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 place-content-center self-center mx-auto mb-5 max-w-[90vw]">
  {
    launches?.map((launch) => (
      <CardLaunch
        id={launch.id}
        name={launch.name}
        img={launch.links.patch.small}
        details={launch.details}
        flightNumber={launch.flight_number}
        success={launch.success}
      />
    ))
  }
</div>
