---
import Layout from '../layouts/Layout.astro'
// import Launches from '../components/Launches.astro';
import LaunchesWithProps from '../components/LaunchesWithProps.astro'
import { getLatestLaunches } from '../lib/spacex'
const response = await getLatestLaunches()
const launches = response?.docs !== undefined ? response.docs : []
---

<Layout title="SpaceX Launches">
    <LaunchesWithProps launches={launches} />
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        /* width: 800px; */
        max-width: calc(100% - 2rem);
        min-width: calc(100% - 4rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
        text-align: center;
    }
    h1 {
        font-size: 2rem;
    }
</style>
